<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Button 눌렀을 때 -->
    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/colorSuccess" />
            <stroke android:width="1dp" android:color="@color/colorPrimary" />
            <corners android:bottomLeftRadius="6dp"
                android:bottomRightRadius="6dp"
                android:topLeftRadius="6dp" android:topRightRadius="6dp"
                ></corners>
        </shape>
    </item>
    <!-- Button 이벤트 없을 때 -->
    <item  android:state_checked="false">
        <shape>
            <solid android:color="@color/colorDefault" />
            <stroke android:width="1dp" android:color="@color/colorPrimary" />
            <corners android:bottomLeftRadius="6dp"
                android:bottomRightRadius="6dp"
                android:topLeftRadius="6dp" android:topRightRadius="6dp" ></corners>
        </shape>

    </item>
</selector>
